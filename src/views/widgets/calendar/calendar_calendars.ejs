<% if (calendars.length === 0) { %>
    <div class="text-center mb-3">
        No calendars added yet.
    </div>
<% } %>

<div class="list-group-flush rounded-10">
    <% calendars.forEach(function (calendar) { %>
        <div class="list-group-item bg-blue-dark border-blue-gray calendar-row" data-id="<%= calendar.id %>">
            <div class="d-flex justify-content-between align-items-center">
                <span>
                    <input class="form-check-input calendar-toggle fs-4 m-0 <%= calendar.color %> border-0" type="checkbox" data-id="<%= calendar.id %>" <%= calendar.enabled ? "checked" : "" %>>
                    <span class="ms-2 calendar-name font-size-sm">
                        <%= calendar.customName || calendar.defaultName %>
                        <% if (calendar.error) { %>
                            <i class="bi bi-exclamation-triangle text-warning ms-1" title="Failed to fetch calendar"></i>
                        <% } %>
                    </span>
                </span>
                <span>
                    <span class="badge btn-secondary cursor-pointer calendar-update" data-id="<%= calendar.id%>">
                        <i class="bi bi-pencil"></i>
                    </span>
                </span>

            </div>
        </div>
    <% }); %>
</div>
