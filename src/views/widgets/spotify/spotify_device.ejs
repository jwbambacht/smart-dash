<% if (spotify.serviceEnabled && spotify.enabled && spotify.isAuthorized && spotify.deviceForSpotify !== null) { %>
    <span class="spotify-device-switch rounded badge btn-blue-dark font-size-sm animate text-white cursor-pointer me-1"
          style="--animate-color: var(--bs-success)"
          state="on"
    >
        <i class="bi bi-speaker"></i> ON
    </span>
    <span class="spotify-device-switch rounded badge btn-blue-dark font-size-sm animate cursor-pointer text-white me-1"
          style="--animate-color: var(--bs-success)"
          state="off"
    >
        <i class="bi bi-speaker"></i> OFF
    </span>
<% } %>

<% if (page === "spotify") { %>
    <% if (spotify.devices !== undefined) { %>
        <span class="badge d-flex align-items-center p-0 bg-blue-dark rounded me-1">
            <select class="form-select form-select-sm font-size-75r fw-bold bg-blue-dark border-0 text-white py-0 shadow-none"
                name="select-device"
            >
                <option disabled <%= spotify.deviceForSpotify === null ? "selected" : "" %>>
                    Select device
                </option>
                <% spotify.devices.forEach(function (device) { %>
                    <option value="<%= device.deviceID %>"
                        <%= spotify.deviceForSpotify !== null && device.deviceID === spotify.deviceForSpotify.deviceID ? "selected" : ""; %>
                >
                        <%= device.name %>
                    </option>
                <% }); %>
            </select>
        </span>
    <% } %>
    <span class="badge d-flex align-items-center p-0 bg-blue-dark rounded me-1">
        <select class="form-select form-select-sm font-size-75r fw-bold bg-blue-dark border-0 text-white py-0 shadow-none"
                name="service-status"
                service-type="SpotifyService"
        >
            <option value="1" <%= spotify.serviceEnabled ? "selected" : "" %>>
                <%= spotify.serviceEnabled ? "Enabled" : "Enable" %>
            </option>
            <option value="0" <%= !spotify.serviceEnabled ? "selected" : "" %>>
                <%= !spotify.serviceEnabled ? "Disabled" : "Disable" %>
            </option>
        </select>
    </span>
<% } %>
