<div class="d-flex justify-content-between align-items-center mb-1">
    <span class="fs-6 font-no-monospace fw-lighter mb-0"><%= setting.description %></span>
</div>

<form class="updateSettingForm font-size-sm" data-id="<%= setting.id %>">
    <div class="input-group">
        <input type="text"
               class="form-control font-size-sm bg-blue-dark"
               name="specification"
               value="<%= setting.specification %>"
               placeholder="Specification"
               required
        >

        <input type="text"
               class="form-control font-size-sm bg-blue-dark"
               name="value"
               value="<%= setting.value %>"
               placeholder="Value"
               required
        >

        <div class="btn btn-danger font-size-sm delete-setting"
             data-id="<%= setting.id %>"
        >
            <i class="bi bi-trash-fill"></i>
        </div>
        <button class="btn btn-success font-size-sm" type="submit">
            <i class="bi bi-check"></i>
        </button>
    </div>
</form>
