<div class="d-flex justify-content-between align-items-center mx-3 m-2">
    <span class="d-flex align-items-center h4 mb-0 font-no-monospace fw-lighter">
        <span class="d-flex align-items-center justify-content-start">
            <div>
                <div class="btn btn-blue ratio ratio-1x1 p-3" data-bs-toggle="modal" data-bs-target="#navigationContainer">
                    <div class="d-flex justify-content-center align-items-center fs-4">
                        <i class="bi bi-gear-fill"></i>
                    </div>
                </div>
            </div>
            <span class="ms-2">
                Settings
                <div class="ms-2 spinner-grow text-success spinner-grow-sm font-size-essm update-spinner d-none"
                     data-page="settings"
                     role="status"
                ></div>
            </span>
        </span>
    </span>
    <span class="rounded badge btn-blue-dark font-size-sm animate text-white cursor-pointer me-1"
          id="restartServer"
    >
        Restart Server
    </span>
</div>

<div class="row row-cols-1 row-cols-xl-2 g-1">
    <div class="col">
        <div class="row row-cols-1">
            <div class="col mb-2">
                <div class="d-flex justify-content-between align-self-center px-3 py-2">
                    <div class="h6 font-no-monospace fw-lighter">
                        <i class="bi bi-key-fill me-2"></i>
                        API Keys
                    </div>
                </div>

                <div class="card rounded-10 p-3">
                    <div class="row row-cols-1 g-1">
                        <div class="col mb-2">
                            <%- include ('../widgets/settings/settings_new', { type: 'api_key' }); %>
                        </div>

                        <% settings.filter(function (setting) {
                            return setting.type === "api_key"
                        }).forEach(function (setting) { %>
                            <div class="col mb-2">
                                <%- include ('../widgets/settings/settings_edit', { setting: setting }); %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <div class="col mb-2">
                <div class="d-flex justify-content-between align-self-center px-3 py-2">
                    <div class="h6 font-no-monospace fw-lighter">
                        <i class="bi bi-spotify"></i>
                        Spotify
                    </div>
                </div>

                <div class="card rounded-10 p-3">
                    <div class="row row-cols-1 g-1">
                        <div class="col mb-2">
                            <%- include ('../widgets/settings/settings_new', { type: 'spotify' }); %>
                        </div>

                        <% settings.filter(function (setting) {
                            return setting.type === 'spotify'
                        }).forEach(function (setting) { %>
                            <div class="col mb-2">
                                <%- include ('../widgets/settings/settings_edit', { setting: setting }); %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <div class="col mb-2">
                <div class="d-flex justify-content-between align-self-center px-3 py-2">
                    <div class="h6 font-no-monospace fw-lighter">
                        <i class="bi bi-lightbulb-fill"></i>
                        Devices
                    </div>
                </div>

                <div class="card rounded-10 p-3">
                    <div class="row row-cols-1 g-1">
                        <div class="col mb-2">
                            <%- include ('../widgets/settings/settings_new', { type: 'devices' }); %>
                        </div>

                        <% settings.filter(function (setting) {
                            return setting.type === 'devices'
                        }).forEach(function (setting) { %>
                            <div class="col mb-2">
                                <%- include ('../widgets/settings/settings_edit', { setting: setting }); %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col">
        <div class="row row-cols-1">
            <div class="col mb-2">
                <div class="d-flex justify-content-between align-self-center px-3 py-2">
                    <div class="h6 font-no-monospace fw-lighter">
                        <i class="bi bi-gear-wide-connected me-2"></i>
                        Services
                    </div>
                </div>

                <div class="card rounded-10 p-3">
                    <div class="row row-cols-1 g-1">
                        <div class="col mb-2">
                            <%- include ('../widgets/settings/settings_new', { type: 'service'}); %>
                        </div>

                        <% settings.filter(function (setting) {
                            return setting.type === "service"
                        }).forEach(function (setting) { %>
                            <div class="col mb-2">
                                <%- include ('../widgets/settings/settings_edit', { setting: setting }); %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>

            <div class="col mb-2">
                <div class="d-flex justify-content-between align-self-center px-3 py-2">
                    <div class="h6 font-no-monospace fw-lighter">
                        <i class="bi bi-nut-fill"></i>
                        Other
                    </div>
                </div>

                <div class="card rounded-10 p-3">
                    <div class="row row-cols-1 g-1">
                        <div class="col mb-2">
                            <%- include ('../widgets/settings/settings_new', { type: '' }); %>
                        </div>

                        <% settings.filter(function (setting) {
                            return !['api_key', 'service', 'spotify', 'devices'].includes(setting.type)
                        }).forEach(function (setting) { %>
                            <div class="col mb-2">
                                <%- include ('../widgets/settings/settings_edit', { setting: setting }); %>
                            </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
